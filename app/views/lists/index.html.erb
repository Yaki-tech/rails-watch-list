<div class="hero_banner d-flex flex-column align-items-center justify-content-center">
  <h1 class="text-white mb-4">My Lists</h1>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-3 col-sm-6 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="list-card-square">
            <h5 class="text-center"><%= list.name %></h5>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
